<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Non focused states
     -->
    <item android:drawable="@drawable/simple_button__background_default" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/simple_button__background_default" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />
    <!--  Focused states
     -->
    <item android:drawable="@drawable/simple_button__background_pressed" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/simple_button__background_pressed" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />
    <!--  Pressed
     -->
    <item android:drawable="@drawable/simple_button__background_pressed" android:state_pressed="true" />
</selector>